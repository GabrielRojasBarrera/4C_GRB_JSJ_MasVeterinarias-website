@model MasVeterinarias.Models.Veterinaria

@{
    ViewData["Title"] = "Detalles";
    Layout = "_LayoutV";
}


<div class="container min-vh-100">

    <!-- Page Heading/Breadcrumbs -->
    <h1 class="mt-4 mb-3">
        @Html.DisplayFor(model => model.Nombre)

    </h1>

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="index.html">Veterinaria</a>
        </li>
        <li class="breadcrumb-item active">Detalles</li>
    </ol>

    <!-- Content Row -->
    <div class="row">
        <!-- Sidebar Column -->
        <div class="col-lg-3 mb-4">
            <div class="list-group">
                <a asp-controller="Veterinaria" asp-action="Detalles" class="list-group-item active">Detalles del Negocio</a>
                <a asp-controller="Empleado" asp-action="Index" class="list-group-item">Personal</a>
                <a asp-controller="Categoria" asp-action="Index" class="list-group-item">Categorias</a>
                <a asp-controller="Servicio" asp-action="Index" class="list-group-item ">Servicios</a>
                <a asp-controller="Producto" asp-action="Index" class="list-group-item">Productos</a>


            </div>
        </div>
        <!-- Content Column -->
        <div class="col-lg-9 mb-4">
            <h3>Detalles del Negocio</h3>
            <dl class="row">

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Representante)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Representante)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.HoraApertura)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.HoraApertura)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.HoraCierre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.HoraCierre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DiasLaborales)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DiasLaborales)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Telefono)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Telefono)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Direccion)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Direccion)
                </dd>
            </dl>

            <div>
                <a href='@Url.Action("Edit", "Veterinaria", new { id = Model.Id })' class="btn btn-primary">Editar</a>
            </div>
        </div>
    </div>
    <!-- /.row -->

</div>
