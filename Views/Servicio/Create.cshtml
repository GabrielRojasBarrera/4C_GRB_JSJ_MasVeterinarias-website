@model MasVeterinarias.Models.Servicio

@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutV";
}

<!-- Page Content -->
<div class="container min-vh-100">

    <!-- Page Heading/Breadcrumbs -->
    <h1 class="mt-4 mb-3">
        Mi Veterinaria

    </h1>

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="index.html">Servicios</a>
        </li>
        <li class="breadcrumb-item active">Añadir</li>
    </ol>

    <!-- Content Row -->
    <div class="row">
        <!-- Sidebar Column -->
        <div class="col-lg-3 mb-4">
            <div class="list-group">
                <a href="index.html" class="list-group-item">Detalles del Negocio</a>
                <a href="about.html" class="list-group-item">Personal</a>
                <a href="services.html" class="list-group-item">Categorias</a>
                <a href="contact.html" class="list-group-item active">Servicios</a>
                <a href="portfolio-1-col.html" class="list-group-item">Productos</a>
                <a href="portfolio-2-col.html" class="list-group-item">Citas</a>

            </div>
        </div>
        <!-- Content Column -->
        <div class="col-lg-9 mb-4">
            <h3>Añadir un nuevo Servicio</h3>

            <form asp-action="Create" asp-controller="Servicio" method="post" enctype="multipart/form-data">
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Nombre del Servicio:</label>
                        <input asp-for="Nombre" type="text" class="form-control" id="name" required data-validation-required-message="Porfavor escriba un Nombre.">
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                        <p class="help-block"></p>
                    </div>
                </div>
                <div class="control-group form-group">
                    <label>Imagen:</label>
                    <div class="input-group mb-3">
                        <div class="custom-file">
                            <input asp-for="ImageService" type="file" class="custom-file-input" id="customFile">
                            <label class="custom-file-label" for="customFile">Elige una imagen</label>
                            <span asp-validation-for="Imagen" class="text-danger"></span>
                        </div>

                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Categoria:</label>
                        <input asp-for="CategoriaId" type="number" class="form-control" id="name" required data-validation-required-message="Dato Invalido.">
                        <span asp-validation-for="CategoriaId" class="text-danger"></span>

                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Especie:</label>
                        <input asp-for="Especie" type="text" class="form-control" id="name" required data-validation-required-message="Porfavor escriba una Especie.">
                        <span asp-validation-for="Especie" class="text-danger"></span>
                        <p class="help-block"></p>
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Raza:</label>
                        <input asp-for="Raza" type="text" class="form-control" id="name" required data-validation-required-message="Porfavor escriba una Raza.">
                        <span asp-validation-for="Raza" class="text-danger"></span>

                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Descripcion:</label>
                        <textarea asp-for="Descripcion" type="text" rows="5" cols="100" class="form-control" id="message" required data-validation-required-message="Porfavor escriba una Descripcion" maxlength="999" style="resize:none"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Detalles:</label>
                        <textarea asp-for="Detalles" type="text" rows="5" cols="100" class="form-control" id="message" required data-validation-required-message="Porfavor escriba los Detalles" maxlength="999" style="resize:none"></textarea>
                        <span asp-validation-for="Detalles" class="text-danger"></span>
                    </div>
                </div>

                <div class="control-group form-group">
                    <div class="controls">
                        <label>Precio:</label>
                        <input asp-for="Precio" type="number" class="form-control" id="name" required data-validation-required-message="Porfavor escriba un Precio.">
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Diponibilidad:</label>
                        <select class="form-control" type="text" asp-for="Disponibilidad" required data-validation-required-message="Porfavor Seleccione la Dsiponibilidad.">
                            <option>Disponible</option>
                            <option>No Disponible</option>
                        </select>
                        <span asp-validation-for="Disponibilidad" class="text-danger"></span>
                    </div>
                </div>

                <div id="success"></div>
                <button type="submit" class="btn btn-primary" id="sendMessageButton" onclick="alert('Servicio Agregado EXITOSAMENTE')">Crear</button>
                <button type="button" asp-controller="Servicio" asp-action="Index" class="btn btn-danger" onclick="alert('¿Estas seguro de cancelar el Registro?')">Cancelar</button>
            </form>

        </div>
    </div>
    <!-- /.row -->
    <script>
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
</div>
