@model MasVeterinarias.Models.Cliente

@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutVregister";
}

<div class="container-xl">

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="contact-form">
                <h1>Completa el registro</h1>
                <p class="hint-text">Complata el registro para comenzar a aprobechar el maximo a tu cuenta.</p>
                <form asp-action="Create" asp-controller="Cliente" method="post">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="Escribe el Nombre">Nombre</label>
                                <input asp-for="Nombre" type="text" class="form-control" id="inputFirstName" required>
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="Escribe el Nombre">Apellido</label>
                                <input asp-for="Apellido" type="text" class="form-control" id="inputFirstName" required>
                                <span asp-validation-for="Apellido" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="Escribe el Nombre">Direccion</label>
                                <input asp-for="Direccion" type="text" class="form-control" id="inputFirstName" required>
                                <span asp-validation-for="Direccion" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="inputLastName">Telefono</label>
                                <input asp-for="Telefono" type="text" class="form-control" id="inputLastName" required>
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                        </div>
                    </div>


                    <input type="submit" class="btn btn-primary" value="Submit">
                </form>
            </div>
        </div>
    </div>

</div>

