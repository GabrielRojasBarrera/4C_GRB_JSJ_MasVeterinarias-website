@model IEnumerable<MasVeterinarias.Models.Empleado>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutV";
}

<div class="container min-vh-100">

    <!-- Page Heading/Breadcrumbs -->
    <h1 class="mt-4 mb-3">
        Mi Veterinaria

    </h1>

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="index.html">Veterinaria</a>
        </li>
        <li class="breadcrumb-item active">Personal</li>
    </ol>

    <!-- Content Row -->
    <div class="row">
        <!-- Sidebar Column -->
        <div class="col-lg-3 mb-4">
            <div class="list-group">
                <a asp-controller="Veterinaria" asp-action="Detalles" class="list-group-item">Detalles del Negocio</a>
                <a asp-controller="Empleado" asp-action="Index" class="list-group-item active">Personal</a>
                <a asp-controller="Categoria" asp-action="Index" class="list-group-item">Categorias</a>
                <a asp-controller="Servicio" asp-action="Index" class="list-group-item ">Servicios</a>
                <a asp-controller="Producto" asp-action="Index" class="list-group-item ">Productos</a>


            </div>
        </div>
        <!-- Content Column -->
        <div class="col-lg-9 mb-4">
            <h3>Personal</h3>
            <p>
                <a asp-action="Create">Crear nuevo</a>
            </p>

            <table class="table col-lg-9 mb-4">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Telefono)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ServicioId)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Telefono)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ServicioId)
                            </td>

                            <td>
                                @Html.ActionLink("Editar", "Edit", new { id = item.Id })
                                @Html.ActionLink("Detalles", "Details", new { id = item.Id })
                                <a href="/Empleado/Delete/@item.Id" onclick="alert('Este Empleado se elimino Exitosamente')">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- /.row -->

</div>
